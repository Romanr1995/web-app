<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>MyServlet</servlet-name>
        <servlet-class>com.roman.MyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Servlet2</servlet-name>
        <servlet-class>com.roman.Servlet2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Servlet2</servlet-name>
        <url-pattern>/s2</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TimeServlet</servlet-name>
        <servlet-class>com.roman.TimeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TimeServlet</servlet-name>
        <url-pattern>/t1</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CalculatorServlet</servlet-name>
        <servlet-class>com.roman.CalculatorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CalculatorServlet</servlet-name>
        <url-pattern>/calc</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DayWeek</servlet-name>
        <servlet-class>com.roman.DayWeek</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DayWeek</servlet-name>
        <url-pattern>/dates</url-pattern>
    </servlet-mapping>
</web-app>

